<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/talk_view_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:textSize="14sp"
        android:text="이러한 복지가 있네요!"
        android:background="@drawable/round_background1"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/talk_view">
    </TextView>

    <LinearLayout
        android:id="@+id/service_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/talk_bokji1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            android:background="@drawable/round_background1">

            <ImageView
                android:id="@+id/talk_image1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/talk_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="service_title1"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp">
                </TextView>
                <TextView
                    android:id="@+id/talk_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:textSize="12sp"
                    android:text="service_content1"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/talk_bokji2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            android:background="@drawable/round_background1">

            <ImageView
                android:id="@+id/talk_image2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/talk_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="service_title2"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp">
                </TextView>
                <TextView
                    android:id="@+id/talk_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:textSize="12sp"
                    android:text="service_content2"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/talk_bokji3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            android:background="@drawable/round_background1">

            <ImageView
                android:id="@+id/talk_image3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/heart" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/talk_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="service_title3"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp">
                </TextView>
                <TextView
                    android:id="@+id/talk_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:textSize="12sp"
                    android:text="service_content3"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/chat_detail"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@drawable/round_background4"
                android:text="관련 서비스 더보기"
                android:textSize="13sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>